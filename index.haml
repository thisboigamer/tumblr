%html
  %head
    %meta{charset:"utf-8"}
    %meta{name:"viewport",content:"width=device-width,initial-scale=1.0"}
    %title {Title}
    %link{rel:"alternate",type:"application/rss+xml",href:"{RSS}"}
    %link{rel:"stylesheet",href:"http://thisboigamer.github.io/screen.css"}
  %body
    %header#header
      %h1 {Title}
      {block:Description}
      %p#description {Description}
      {/block:Description}
    %ul#posts
      {block:Posts}
      {block:Text}
      %li{class:"post Text"}
        {block:Title}
        %header
          %h3
            %a{href:"{Permalink}"} {Title}
        {/block:Title}
        .content {Body}
      {/block:Text}
      {block:Photo}
      %li{class:"post Photo"}
        %img{src:"{PhotoURL-500}" alt:"{PhotoAlt}"}

        {block:Caption}
        .caption {Caption}
        {/block:Caption}
      {/block:Photo}
      {block:Panorama}
      %li{class:"post Panorama"}
        {LinkOpenTag}
        %img{src:"{PhotoURL-Panorama}" alt:"{PhotoAlt}"}
        {LinkCloseTag}
        {block:Caption}
        .caption {Caption}
        {/block:Caption}
      {/block:Panorama}
      {block:Photoset}
      %li{class:"post Photoset"}
        {Photoset-500}
        {block:Caption}
        .caption {Caption}
        {/block:Caption}
      {/block:Photoset}
      {block:Quote}
      %li{class:"post quote"}
        "{Quote}"
        {block:Source}
          .source {Source}
        {/block:Source}
      {/block:Quote}
      {block:Link}
      %li{class:"post Link"}
        %a{href:"{URL}" class:"link" target:"_blank"} {Name}
        {block:Description}
        .description {Description}
        {/block:Description}
      {/block:Link}
      {block:Chat}
      %li{class:"post Chat"}
        {block:Title}
        %h3
          %a{href:"{Permalink}"
            {Title}
        {/block:Title}
        %ul.chat
          {block:Lines}
          %li{class:"{Alt} user_{UserNumber}"}
            {block:Label}
            %span.label {Label}
            {/block:Label}
            {Line}
          {/block:Lines}
      {/block:Chat}
      {block:Video}
      %li{class:"post Video"}
        {Video-500}
          {block:Caption}
          .caption {Caption}
          {/block:Caption}
      {/block:Video}
      {block:Audio}
      %li{class:"post Audio"}
        {AudioEmbed}
          {block:Caption}
          .caption {Caption}
          {/block:Caption}
      {/block:Audio}
        %footer
          %ul
            %li
              %a{href:"{Permalink}"} Post Permalink
            {block:HasTags}
            %li Tagged
              %ul
                {block:Tags}
                %li
                  %a{href:"{TagURL}"} {Tag}
                {/block:Tags}
            {/block:HasTags}
      {/block:Posts}
    %footer#footer
      %small
        %a{href:"{RSS}"} RSS Feed
